<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Grocery Database-->
<main class="container">
    <div class="row">
        <% if (GroceryList && GroceryList.length > 0) { %>
          <% GroceryList.forEach(item => { %>
            <div class="col-12 mb-3">
              <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                  <div>
                    <h5 class="card-title"><%= item.Name %></h5>
                    <p class="card-text">
                      Quantity: <%= item.Quantity %> | Category: <%= item.Category %> | Priority: <%= item.Priority || 'None' %> 
                    </p>
                    <p class="card-text"><%= item.Notes || 'No notes available' %></p>
                  </div>
                  <div>
                    <a href="/grocerylist/edit/<%= item._id %>" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/grocerylist/delete/<%= item._id %>" class="btn btn-danger btn-sm">Delete</a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p>No items found in your grocery list.</p>
        <% } %>
      </div>
</main>
<%- include ../Partials/footer.ejs%>