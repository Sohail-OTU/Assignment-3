<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Item Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="quantityTextField">Quantity</label>
                    <input type="text" class="form-control" id="quantityTextField" placeholder="Enter the Item Quantity" name="Quantity" required>
                </div>
                <div class="form-group">
                    <label for="categoryTextField">Category</label>
                    <input type="text" class="form-control" id="categoryTextField" placeholder="Enter the Item Category" name="Category" required>
                </div>
                <div class="form-group">
                    <label for="notesTextArea">Notes</label>
                    <textarea type="text" class="form-control" id="notesTextArea"  placeholder="Enter the Item Notes" name="Notes"></textarea>
                </div>
                <div class="form-group">
                    <label for="priorityTextField">Priority</label>
                    <input type="text" class="form-control" id="priorityTextField" placeholder="Enter the Item Priority" name="Priority">
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="number" type="number" step="0.01" min="0" class="form-control" id="priceTextField" placeholder="Enter the Item Price" name="Price" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <a href="/grocerylist" class="btn btn-warning">Cancel
                    <i class="fas fa-undo"></i></a>   
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>