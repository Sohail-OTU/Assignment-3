<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Item Name" name="Name" value="<%= Grocery.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="quantityTextField">Quantity</label>
                    <input type="text" class="form-control" id="quantityTextField" placeholder="Enter the Item Quantity" name="Quantity" value="<%= Grocery.Quantity %>" required>
                </div>
                <div class="form-group">
                    <label for="categoryTextField">Category</label>
                    <input type="text" class="form-control" id="categoryTextField" placeholder="Enter the Item Category" name="Category" value="<%= Grocery.Category %>" required>
                </div>
                <div class="form-group">
                    <label for="notesTextArea">Notes</label>
                    <textarea type="text" class="form-control" id="notesTextArea"  placeholder="Enter any Item Notes" name="Notes"><%= Grocery.Notes %></textarea>
                </div>
                <div class="form-group">
                    <label for="priorityTextField">Priority</label>
                    <input type="number" class="form-control" id="priorityTextField" placeholder="Enter the Item Priority" name="Priority" value="<%= Grocery.Priority %>">
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter the Item Price" name="Priority" value="<%= Grocery.Price %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>